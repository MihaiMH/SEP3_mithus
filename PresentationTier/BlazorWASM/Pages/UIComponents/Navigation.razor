@code {

    private string navClass = "";

    void ChangeStatus()
    {
        if (navClass == "")
        {
            navClass = "active";
        }
        else
        {
            navClass = "";
        }
    }

    private async Task LogOutAsync()
    {
        try
        {
            await userService.LogoutAsync();
            _nav.NavigateTo("/");
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }

}