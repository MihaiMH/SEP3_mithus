@page "/CreateModerator"
@using Domain.Models;

<HeaderEl title="Create a moderator" description="The form presented to you bellow, will help you create a new moderator account."/>

<div class="pageContent">
    <h1 class="body_title">
        <b>Create a moderator</b>
    </h1>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
        </thead>
        <tbody>
        @if (users == null)
        {
            <span>No users found</span>
        }
        else if (!users.Any())
        {
            <span>No users to be found</span>
        }
        else
        {
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <select id="role">
                            <option value="currentRole">@user.Role</option>
                            <option value="Moderator">Moderator</option>
                        </select>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

@code {
    IEnumerable<Domain.Models.User>? users;
}