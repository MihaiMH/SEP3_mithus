                }
            };
            selectedChat.Messages = selectedChat.Messages.Concat(messages);
            Console.WriteLine(selectedChat.Messages.Last().Text);
            chatService.SendMessageAsync(dto, selectedChat.ID);
            message = "";

            StateHasChanged();

            chats = await chatService.GetChatByUser(id);
        }
    }

